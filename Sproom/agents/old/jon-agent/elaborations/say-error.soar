sp {elaborate*say-error
   (state <s> ^name jon-agent
              ^io.output-link <ol>)
   (<ol> ^{ <command> <> send-message } <c>)
   (<c> ^status error)
-->
   (<c> ^said true)
   (<ol> ^send-message <sm>)
   (<sm> ^destination |say| ^first <say1>)
   (<say1> ^word |Command| ^next <say2>)
   (<say2> ^word |error:| ^next <say3>)
   (<say3> ^word <command> ^next nil)
}

sp {elaborate*error-halt
   (state <s> ^name jon-agent
              ^io.output-link <ol>)
   (<ol> ^{ <command> <> send-message } <c> ^send-message.status accepted)
   (<c> ^status error ^said true)
-->
   (write (crlf) |Command error:| <command>)
   (halt)
}
