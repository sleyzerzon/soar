echo "\nLoading complex/retreat.soar"

sp {propose*retreat*sound
   (state <s> ^name tanksoar
              ^missile-number none
              ^sound)
   -->
   (<s> ^operator <o> + =)
   (<o> ^name retreat)}

sp {propose*retreat*radiated
   (state <s> ^name tanksoar
              ^missile-number none
              ^radiated *yes*)
   -->
   (<s> ^operator <o> + =)
   (<o> ^name retreat)}

sp {propose*retreat*radar
   (state <s> ^name tanksoar
              ^missile-number none
              ^tank-detected *yes*)
   -->
   (<s> ^operator <o> + =)
   (<o> ^name retreat)}

sp {propose*retreat*incoming
   (state <s> ^name tanksoar
              ^missile-number none
              ^idirection)
   -->
   (<s> ^operator <o> + =)
   (<o> ^name retreat)}
