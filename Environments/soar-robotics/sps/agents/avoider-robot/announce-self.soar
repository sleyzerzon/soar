sp {avoider-robot*propose*announce-self
   (state <s> ^name simple-robot
              -^announced true)
-->
   (<s> ^operator <op> + >)
   (<op> ^name announce-self)
}

sp {apply*announce-self
   (state <s> ^operator <op>
              ^io.output-link <ol>)
   (<op> ^name announce-self)
-->
   (<s> ^announced true)
   (<ol> ^send-message <sm>)
   (<sm> ^first <f>
         ^destination say)
   (<f>  ^word avoider
         ^next <n1>)
   (<n1> ^word start
         ^next <n2>)
   (<n2> ^word ing
         ^next <n3>)
   (<n3> ^word up
         ^next nil)
}
