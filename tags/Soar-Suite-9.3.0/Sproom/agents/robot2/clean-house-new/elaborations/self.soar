sp {self*elaborate*stopped*magnitude
   (state <s> ^name robot
              ^io.input-link <input>)
   (<input> ^self <self>)
   (<self> ^pose <pose>)
   (<pose> ^x-velocity <xv>
           ^y-velocity <yv>)
-->
   (<pose> ^magnitude (+ (* <xv> <xv>) (* <yv> <yv>)))}

sp {self*elaborate*stopped
   (state <s> ^name robot
              ^io.input-link <input>
              ^parameters.stopped-dead-zone-squared <dz>)
   (<input> ^self <self>)
   (<self> ^pose <pose>)
   (<pose> ^magnitude { < <dz> })
-->
   (<self> ^stopped yes)}

sp {self*elaborate*stopped*no1
   (state <s> ^name robot
              ^io.input-link <input>)
   (<input> ^self <self>)
  -(<self> ^stopped yes)
-->
   (<self> ^stopped no)}