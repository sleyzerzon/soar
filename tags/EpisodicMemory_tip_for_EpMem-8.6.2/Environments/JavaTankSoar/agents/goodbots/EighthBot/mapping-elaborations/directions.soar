echo "\nLoading mapping-elaborations/directions.soar"

sp {elaborate*directions*direction-map
    (state <s> ^superstate nil)
    -->
    (<s> ^direction-map <dm>)
    (<dm> ^north <north>
          ^south <south>
          ^west <west>
          ^east <east>)
    (<north> ^right east  ^left west  ^backward south ^forward north)
    (<south> ^right west  ^left east  ^backward north ^forward south)
    (<west>  ^right north ^left south ^backward east  ^forward west)
    (<east>  ^right south ^left north ^backward west  ^forward east)}


## These are used in retreat/move.soar
sp {elaborate*sidestep-directions
   (state <s> ^name tanksoar)
-->
   (<s> ^side-direction <sd>)
   (<sd> ^forward right left  
         ^backward right left
         ^right forward backward 
         ^left forward backward)}


sp {elaborate*opposite-direction
   (state <s> ^name tanksoar)
-->
   (<s> ^opposite-direction <od>)
   (<od> ^north south
         ^south north
         ^west east
         ^east west
         ^left right
         ^right left
         ^forward backward
         ^backward forward)}