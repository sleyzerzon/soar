#Propose retrieving the closest matching situation to this one
sp {evaluate-move*propose*epmem-recall
   (state <s> ^name evaluate-move
              ^epmem <epmem>)
   (<epmem> -^query.io <io>
            -^retrieval-count)
-->
   (<s> ^operator <op> + =)
   (<op> ^name epmem-recall)
}

#Why turn off the radar?
sp {elaborate*epmem-recall*turn-off-radar
   (state <s> ^operator <op> +
              ^io.input-link.radar-status on)
   (<op> ^name epmem-recall)
-->
   (<op> ^action.radar.switch off)
}

#Create an epmem query containing the current state
#with the agent moving forward in that state
sp {apply*epmem-recall*query
   (state <s> ^name evaluate-move
              ^operator <op>
              ^epmem.query <query>
              ^io.input-link <il>)
   (<op> ^name epmem-recall)
-->
   (<query> ^io <io>)
   (<io> ^input-link <il>
         ^output-link <ol>)
   (<ol> ^move.direction forward)
}



