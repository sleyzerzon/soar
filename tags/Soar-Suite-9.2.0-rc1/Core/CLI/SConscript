#!/usr/bin/python
import glob

Import('env')
env = env.Clone()
env.Prepend(CPPPATH = ['src', 
		       'include', 
		       '../SoarKernel/include', 
		       '../ElementXML/include', 
		       '../ConnectionSML/include', 
		       '../KernelSML/include', ])

if env['scu']:
	CommandLineInterface = env.Library('CommandLineInterface', 'CommandLineInterface.cxx')
else:
	CommandLineInterface = env.Library('CommandLineInterface', glob.glob('src/*.cpp'))
env.Install('#SoarLibrary/lib', CommandLineInterface)
