#!/usr/bin/python
import glob

Import('env')
env = env.Copy()
env.Append(CPPFLAGS = ' -fno-strict-aliasing')
env.Prepend(CPPPATH = [ 'src', 
			'include', 
			'../ElementXML/include'])

if env['scu']:
	SoarKernel = env.StaticLibrary('SoarKernel', 'SoarKernel.cxx')
else:
	SoarKernel = env.StaticLibrary('SoarKernel', glob.glob('src/*.cpp'))
env.Install('#SoarLibrary/lib', SoarKernel)
