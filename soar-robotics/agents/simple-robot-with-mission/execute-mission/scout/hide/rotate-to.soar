sp {hide*elaborate*state*desired-yaw
   (state <s> ^superoperator <so>
              ^io.input-link.self.location <l>)
   (<so> ^name hide
         ^waypoint <w>)
   (<l> ^x <x1> ^y <y1>)
   (<w> ^x <x2> ^y <y2>)
-->
   (<s> ^desired-yaw (compute-heading <x1> <y1> <x2> <y2>))
}

sp {hide*elaborate*superoperator*move-now
   (state <s> ^name hide
              ^top-state.rotation-tolerance <rt>
              ^yaw-diff <= <rt>
              ^superoperator <so>)
-->
   (<so> ^move-now true)
}