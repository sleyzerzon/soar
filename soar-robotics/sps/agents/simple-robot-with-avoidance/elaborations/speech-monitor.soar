sp {speech-monitor*waypoints*destination-waypoint
   (state <s> ^superstate nil
              ^destination-waypoint.waypoint.id <id>
              ^io.output-link <out>)
-->
   (<out> ^send-message <sm>)
   (<sm> ^destination say
         ^first <first>)
   (<first> ^word going
            ^next <second>)
   (<second> ^word via
             ^next <third>)
   (<third> ^word <id>
            ^next nil)
}


sp {speech-monitor*waypoints*destination-waypoint-goto
   (state <s> ^operator <o>
              ^io.output-link <out>)
   (<o> ^name go-to-location
        ^desired-waypoint.id <id>
-->
   (<out> ^send-message <sm>)
   (<sm> ^destination say
         ^first <first>)
   (<first> ^word going
            ^next <second>)
   (<second> ^word to
             ^next <third>)
   (<third> ^word <id>
            ^next nil)
}

