sp {go-to-location*propose*give-up-on-move-to
   (state <s> ^name go-to-location
              ^top-state.move-to <mt>)
   (<mt> ^give-up true)
-->
   (<s> ^operator <op> +)
   (<op> ^name give-up-on-move-to
         ^move-to <mt>)
}

sp {apply*give-up-on-move-to
   (state <s> ^operator <op>
              ^waypoints.at <w>
              ^top-state <ts>)
   (<op> ^name give-up-on-move-to
         ^move-to <mt>)
   (<ts> ^move-to <mt>)
   (<mt> ^map-updated true
         ^source <w>)
-->
   (<ts> ^move-to <mt> -)
}
