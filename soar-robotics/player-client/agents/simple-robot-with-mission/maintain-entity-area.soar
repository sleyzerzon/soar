sp {simple-robot*elaborate*state*area-1
   (state <s> ^name simple-robot
              ^entities.entity <e>)
   (<e> ^data.absolute-location <al>)
   (<al> ^x >= 4
         ^y <= -3)
-->
   (<e> ^area 1)
}

sp {simple-robot*elaborate*state*area-2
   (state <s> ^name simple-robot
              ^entities.entity <e>)
   (<e> ^data.absolute-location <al>)
   (<al> ^x >= 4
         ^y > -3)
-->
   (<e> ^area 2)
}

sp {simple-robot*elaborate*state*area-3
   (state <s> ^name simple-robot
              ^entities.entity <e>)
   (<e> ^data.absolute-location <al>)
   (<al> ^x {> -4.5 < 4}
         ^y >= 5)
-->
   (<e> ^area 3)
}

sp {simple-robot*elaborate*state*area-4
   (state <s> ^name simple-robot
              ^entities.entity <e>)
   (<e> ^data.absolute-location <al>)
   (<al> ^x <= 4.5
         ^y >= 5)
-->
   (<e> ^area 4)
}