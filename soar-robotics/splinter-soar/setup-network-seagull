echo "setting up albatros eth0-internet eth0:1-splinter eth1-lcm"

sudo killall NetworkManager

sudo ifconfig eth0 down
sudo ifconfig eth0:1 down
sudo ifconfig eth1 down

# internet
sudo ifconfig eth0 up

# lcm
sudo iwconfig eth1 mode ad-hoc
sudo iwconfig eth1 essid 'albatros'
sudo iwconfig eth1 channel 4
sudo ifconfig eth1 169.254.34.2
sudo ifconfig eth1 up

# splinter
sudo ifconfig eth0:1 192.168.1.2
sudo ifconfig eth0:1 up

# default route
sudo route add default gw 192.168.1.1 metric 10
echo run dhclient eth0 if desired
