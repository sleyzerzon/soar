(<= (provoked ?monster)
   (monster ?monster ?monster-type)
   (not (currentlyAsleep ?monster))
   (true (location ?monster ?x ?y))
   (room ?lx ?ty ?rx ?by)
   (between ?lx  ?x ?rx)
   (between ?ty ?y ?by)
   (nextHeroLocation ?hx ?hy)
   (between ?lx  ?hx ?rx)
   (between ?ty ?hy ?by))

(<= (provoked ?monster)
   (monster ?monster ?monster-type)
   (true (asleep ?monster ?n))
   (monsterAttacked ?monster))

(<= (provoked ?monster)
   (monster ?monster ?monster-type)
   (true (asleep ?monster ?n))
   (hitByArrow ?monster))

