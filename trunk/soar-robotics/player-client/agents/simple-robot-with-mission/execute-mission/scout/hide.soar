sp {scout*propose*hide
   (state <s> ^name scout
              ^top-state.entities.entity.area <a>
              ^waypoints.at <w>)
   (<w> ^hide <wh>)
   (<wh> ^area <a>)
-->
   (<s> ^operator <op> +)
   (<op> ^name hide
         ^waypoint <wh>)
}

sp {scout*propose*hide*switch-hiding-location
   (state <s> ^name scout
              ^top-state.entities.entity.area <a>
              ^waypoints.at <wh>)
   (<wh> ^hiding <w>)
   (<w> ^hide {<wh-o> <> <wh>})
   (<wh-o> ^area <a>)
-->
   (<s> ^operator <op> +)
   (<op> ^name hide
         ^waypoint <wh-o>)
}


sp {apply*hide
   (state <s> ^operator <op>
              ^io.output-link <ol>)
   (<op> ^name hide
         ^waypoint <h>)
   (<h> ^x <x>
        ^y <y>)
-->
   (<ol> ^move-to <mt>)
   (<mt> ^x <x>
         ^y <y>
         ^throttle 1)
}
