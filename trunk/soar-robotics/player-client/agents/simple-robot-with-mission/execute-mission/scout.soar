# proposed by generic operator proposal in propose-mission-operator

sp {apply*scout*end-time
   (state <s> ^operator <op>
              ^mission <m>)
   (<op> ^name scout)
   (<m> ^first <f>
        ^current <c>)
   (<f> ^start-time <st>)
   (<c> ^return-time <rt>)
-->
   (<c> ^end-time (+ <st> <rt>))
}

sp {apply*scout*complete
   (state <s> ^operator <op>
              ^io.input-link.time.seconds >= <et> 
              ^mission.current <c>)
   (<op> ^name scout)
   (<c> ^end-time <et>)
-->
   (<c> ^status complete)
}