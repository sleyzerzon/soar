sp {apply*waypoints
   (state <s> ^operator <op>)
   (<op> ^name initialize-simple-robot)
-->
   (<s> ^waypoints <w>)
   (<w> ^waypoint <w1> <w2> <w3> <w4> <w5> <w6> <w7> <w8> <w9> <w10> <w11> <w12> <hl5> <hr5> <hl11> <hr11> <hl12> <hr12>)
   (<w1> ^x -7 ^y -7 ^id |1| ^next <w2> <w6> <w8> <w10>)
   (<w2> ^x -6.5 ^y 0 ^id |2| ^next <w1> <w3> <w4>)
   (<w3> ^x -7 ^y 9 ^id |3| ^next <w2> <w7> <w12>)
   (<w4> ^x 0 ^y 2 ^id |4| ^next <w2> <w5> <w9>)
   (<w5> ^x 4 ^y 5 ^id |5| ^next <w4> ^hide <hl5> ^hide <hr5>)
   (<hl5> ^hiding <w5> ^x 1.5 ^y 3.5 ^yaw 0 ^area 3)
   (<hr5> ^hiding <w5> ^x 3 ^y 3 ^yaw 45 ^area 2)
   (<w6> ^x -10 ^y -3 ^id |6| ^next <w1> <w7>)
   (<w7> ^x -10 ^y 0 ^id |7| ^next <w3> <w6>)
   (<w8> ^x -3 ^y -3 ^id |8| ^next <w1> <w9>)
   (<w9> ^x -3 ^y 1.5 ^id |9| ^next <w4> <w8>)
   (<w10> ^x 3 ^y -4 ^id |10| ^next <w1> <w11>)
   (<w11> ^x 8 ^y -2 ^id |11| ^next <w10> ^hide <hl11> <hr11>)
   (<hl11> ^hiding <w11> ^x 7.5 ^y 0.5 ^yaw 0 ^area 2)
   (<hr11> ^hiding <w11> ^x 7.5 ^y 3.5 ^yaw 0 ^area 1)
   (<w12> ^x -4.5 ^y 10 ^id |12| ^next <w3> ^hide <hl12> <hr12>)
   (<hl12> ^hiding <w12> ^x -6.5 ^y 7.5 ^yaw 90 ^area 3)
   (<hr12> ^hiding <w12> ^x -2.5 ^y 7.5 ^yaw 90 ^area 4)
}

# calculate the distance to each waypoint
sp {elaborate*waypoint*distance
   (state <s> ^io.input-link.self.current-location <cl>
              ^waypoints.waypoint <w>)
   (<w> ^x <wx>
        ^y <wy>)
   (<cl> ^x <cx>
         ^y <cy>)
-->
   (<w> ^distance (sqrt (+ (*(- <cx> <wx>) (- <cx> <wx>)) (*(- <cy> <wy>) (- <cy> <wy>)) ) ))
}

# if we're close enough to a waypoint, then mark that we are "at" the waypoint
sp {elaborate*waypoints*at-waypoint
   (state <s> ^io.input-link.self.current-location <cl>
              ^waypoints <ws>
             -^name selection)
   (<ws> ^waypoint <w>)
   (<w> ^distance < 0.5)
-->
   (<ws> ^at <w>)
}

sp {monitor*waypoints*at-waypoint
   (state <s> ^waypoints.at <a>)
   (<a> ^x <x> ^y <y>)
-->
   (write (crlf) |At (| <x> |,| <y> |)|)
}

sp {monitor*multiple-ats
   (state <s> ^waypoints <ws>)
   (<ws> ^at <a1> {<a2> <> <a1>})
-->
   (write (crlf) |Multiple ats in waypoints: | <a1> | | <a2>)
   (interrupt)
}