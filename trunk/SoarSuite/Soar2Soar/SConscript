#!/usr/bin/python
# Project: Soar <http://soar.googlecode.com>
# Author: Jonathan Voigt <voigtjr@gmail.com>
#
import sys

Import('compEnv')
env = compEnv.Clone()

soar2soar = env.Program('soar2soar', Glob('*.cpp'))
env.Install('$PREFIX/bin', soar2soar)

# Resources
Import('InstallDir')
InstallDir(env, '$PREFIX/share/soar/Demos/soar2soar/agents', '#../Soar2Soar/agents')
InstallDir(env, '$PREFIX/share/soar/Demos/soar2soar/environments', '#../Soar2Soar/environments')
env.Clean(soar2soar, env.FindInstalledFiles())

