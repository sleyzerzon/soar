sp {fire-on-command*propose*move
   (state <s> ^io <io>
             -^sentence-num <num>)
   (<io> ^input-link.text-input.sentence <sent>
         ^output-link <ol>)
   (<sent> ^word { << forward backward >> <dir> }
           ^sentence-num <num>)
   -(<ol> ^text-output.sentence.sentence-num <num>)
-->
   (<s> ^operator <op> + >)
   (<op> ^name move
         ^direction <dir>
         ^sentence-num <num>
         ^actions.move.direction <dir>)
}

sp {apply*move
   (state <s> ^operator <op>
              ^io.output-link <ol>)
   (<op> ^name move
         ^sentence-num <num>
         ^direction <dir>)
-->
   (<s> ^sentence-num <num>)
   (<ol> ^text-output <to>)
   (<to> ^sentence <sen>)
   (<sen> ^sentence-num <num>
          ^word moved
          ^next-word <nw1>)
   (<nw1> ^word <dir>)
}

