sp {get-block*propose*row-reorient
   (state <s> ^name get-block
             -^different.row true
             -^reorient row)
-->
   (<s> ^operator <op> + =)
   (<op> ^name reorient
         ^axis row)
}
sp {get-block*propose*col-reorient
   (state <s> ^name get-block
             -^different.col true
             -^reorient col)
-->
   (<s> ^operator <op> + =)
   (<op> ^name reorient
         ^axis col)
}

sp {apply*reorient
   (state <s> ^operator <op>)
   (<op> ^name reorient
         ^axis <axis>)
-->
   (<s> ^reorient <axis>)
}
