sp {orient*propose*rotate*left
   (state <s> ^name orient
              ^yaw <yaw> < 0
              ^io.input-link.self.angle.direction <d>)
-->
   (<s> ^operator <op> +)
   (<op> ^name rotate-left
         ^actions.rotate.direction left)
}

sp {apply*rotate-left
   (state <s> ^operator <op>
             -^rotated-once)
   (<op> ^name rotate-left)
-->
   (<s> ^rotated-once true)
}

