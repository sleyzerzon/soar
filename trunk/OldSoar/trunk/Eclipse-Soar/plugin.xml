<?xml version="1.0" encoding="UTF-8"?>
<plugin
   id="edu.rosehulman.soar"
   name="Soar Plug-in"
   version="0.4.1"
   provider-name="Project Awesome"
   class="edu.rosehulman.soar.SoarPlugin">

   <runtime>
      <library name="soar.jar"/>
   </runtime>
   <requires>
      <import plugin="org.eclipse.core.resources"/>
      <import plugin="org.eclipse.ui"/>
   </requires>


	<!-- Soar Perspective -->
	<extension
		point="org.eclipse.ui.perspectives">
		<perspective
			name="Soar Perspective"
			icon="icons/soar.gif"
			class="edu.rosehulman.soar.perspective.SoarPerspectiveFactory"
			id="edu.rosehulman.soar.perspective.SoarPerspectiveFactory">
		</perspective>
	</extension>


   <!-- Soar Project Nature -->
   
   <extension
      point="org.eclipse.core.resources.natures"
      id="natures.SoarProjectNature"
      name="Soar Project Nature">
      <runtime>
         <run class="edu.rosehulman.soar.natures.SoarProjectNature">
         </run>
      </runtime>
   </extension>
   
	<extension
		point="org.eclipse.ui.projectNatureImages">
		<image
			id="edu.rosehulman.soar.natures.SoarProjectNatureImage"
			natureId="edu.rosehulman.soar.natures.SoarProjectNature"
			icon="icons/soarOverlay.gif">
		</image>
	</extension>
	
	<extension point="org.eclipse.ui.elementFactories">
		<factory id="edu.rosehulman.soar.datamap.editor.DatamapInputFactory"
			class="edu.rosehulman.soar.datamap.editor.DatamapInputFactory" /> 
	</extension>
	
	
	<!-- Soar File Marker -->
	
	<extension
		id="SoarFile"
		point="org.eclipse.core.resources.markers"
		name="%SoarOperatorName">
		<super type="org.eclipse.core.resources.marker"/>
		<persistent value="true" />
		<attribute name="type" />
	</extension>
	
	<extension
		id="DatamapProblem"
		point="org.eclipse.core.resources.markers"
		name="%dmproblemName">
		<super type="org.eclipse.core.resources.problemmarker"/>
		<persistent value="true" />
	</extension>
	
	
	<!-- Incremental builder to handle the sourcing file -->
	
	<extension
		id="sourcing.SourcingBuilder"
		name="Soar Sourcing Builder"
		point="org.eclipse.core.resources.builders">
		<builder>
			<run
				class="edu.rosehulman.soar.sourcing.SourcingBuilder">
				<parameter name="optimize" value="true" />
			</run>
		</builder>
	</extension>


	<!-- Navigator -->
	
	<extension point="org.eclipse.ui.views">
		<category 
			id="edu.rosehulman.soar.views"
			name="Soar" />
		<view 
			id="edu.rosehulman.soar.navigator.SoarNavigator"
			name="Soar Navigator"
			icon="icons/soar.gif"
			category="edu.rosehulman.soar.views"
			class="edu.rosehulman.soar.navigator.SoarNavigator" />
	</extension>


   <!-- DataMap plugin -->

   <extension
         point="org.eclipse.ui.editors">
      <editor
            name="DataMap Editor"
            filenames="datamap.xml"
            icon="icons/soar.gif"
            class="edu.rosehulman.soar.datamap.DataMapEditor"
            id="edu.rosehulman.soar.datamap.DataMapEditor">
      </editor>
   </extension>
   
