sp {wander*propose*reverse
   (state <s> ^name wander
              ^io.input-link <il>
              ^stop.timeout <timeout>
              ^reverse.direction backward)
   (<il> ^time <time> >= <timeout>
         ^config.power.reverse <power>
         ^config.delay.reverse <delay>)
-->
   (<s> ^operator <op> +)
   (<op> ^name reverse
         ^actions.drive-power <drive>
         ^reverse.timeout (+ <time> <delay>))
   (<drive> ^left (* <power> -1)
            ^right (* <power> -1))
}

sp {apply*reverse
   (state <s> ^operator <op>)
   (<op> ^name reverse
         ^reverse.timeout <timeout>)
-->
   (<s> ^stop <stop> -
        ^reverse.timeout <timeout>)
}
