sp {apply*orts-build
   (state <s> ^operator <o>
              ^io.output-link <ol>
              ^top-state <ts>)
   (<o> ^name orts-build
        ^worker <w>
        ^x <x>
        ^y <y>
        ^use-buffer <ub>
        ^building-type <t>
        ^task-id <tid>)
-->
   (<ol> ^command <b>)
   (<b> ^group0 <w>
        ^param0 <t>
        ^param1 <x>
        ^param2 <y>
        ^param3 <ub>
        ^name build
        ^task-id <tid>)
}




