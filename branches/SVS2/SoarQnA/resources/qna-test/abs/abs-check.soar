sp {abs*propose*abs-check
   (state <s> ^name abs
              ^result <r>)
-->
   (<s> ^operator <op> + =)
   (<op> ^name abs-check)
}

sp {apply*abs-check*failure
   (state <s> ^operator <op>
              ^result <r>
              ^superstate.io.input-link.qna-resultset.result.result {<> <r>})
   (<op> ^name abs-check)
-->
   (write |abs test failed!|)
   (halt)
}

sp {apply*abs-check*success
   (state <s> ^operator <op>
              ^result <r>
              ^superstate <ss>)
   (<ss> ^io.input-link.qna-resultset.result.result <r>
         ^test <t>)
   (<t> ^source math
        ^query abs)
   (<op> ^name abs-check)
-->
   (<t> ^done true)
   (write |abs: success|)
}
