import os

Import('env')

Command('svs.cxx', Glob('src/filters/*.h') + Glob('src/filters/*.cpp'), './gen_filter_factory', chdir='SVS')

clone = env.Clone()
clone.Prepend(CPPPATH = Split('src src/filters #SoarKernel/src'))

if env['SCU']:
	svs = clone.StaticLibrary('svs', 'svs.cxx')
else:
	svs = clone.StaticLibrary('svs', Glob('src/*.cpp') + Glob('src/filters/*.cpp'))

env.Install('$PREFIX/lib', svs)
