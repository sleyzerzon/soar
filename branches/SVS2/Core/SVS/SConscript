#!/usr/bin/python
# Project: Soar <http://soar.googlecode.com>
# Author: Jonathan Voigt <voigtjr@gmail.com>
#
import os

Import('env')

os.system('cd ' + GetLaunchDir() + '/SVS; make')

clone = env.Clone()
clone.Prepend(CPPPATH = Split('src src/filters #SoarKernel/src'))

if env['SCU']:
	svs = clone.StaticLibrary('svs', 'svs.cxx')
else:
	svs = clone.StaticLibrary('svs', Glob('src/*.cpp', 'src/filters/*.cpp'))

env.Install('$PREFIX/lib', svs)
