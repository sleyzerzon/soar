#!/usr/bin/python
# Project: Soar <http://soar.googlecode.com>
# Author: Jonathan Voigt <voigtjr@gmail.com>
#
Import('env')
clone = env.Clone()

if not env['STATIC_LINKED']:
	clone.Append(LIBS = Split('ElementXML CommandLineInterface ConnectionSML SoarKernel sqlite3'))
	clone.Append(LIBPATH = ['$PREFIX/lib'])

if env['SCU']:
	if env['STATIC_LINKED']:
		SoarKernelSML = clone.Library('SoarKernelSML', 'KernelSML.cxx')
	else:
		SoarKernelSML = clone.SharedLibrary('SoarKernelSML', 'KernelSML.cxx')
else:
	if env['STATIC_LINKED']:
		SoarKernelSML = clone.Library('SoarKernelSML', Glob('src/*.cpp'))
	else:
		SoarKernelSML = clone.SharedLibrary('SoarKernelSML', Glob('src/*.cpp'))

env.Install('$PREFIX/lib', SoarKernelSML)
