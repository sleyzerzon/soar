#!/usr/bin/python
# Project: Soar <http://soar.googlecode.com>
# Author: Jonathan Voigt <voigtjr@gmail.com>
#
import sys

Import('env')
clone = env.Clone()

libs = {
	('darwin', '32') : 'cppunit-osx',
	('darwin', '64') : 'cppunit-osx-64',
	('linux2', '32') : 'cppunit-linux',
	('linux2', '64') : 'cppunit-linux-64',
	('win32',  '32') : 'cppunit_dllvs9',
	('win32',  '64') : 'cppunit64_dllvs9'
}

clone.Prepend(LIBS = libs[(sys.platform, GetOption('platform'))], LIBPATH = ['lib'], CPPPATH = env.Dir('src').srcnode())
t = env.Install('$OUT_DIR', clone.Program('UnitTests', Glob('src/*.cpp')))
Return('t')
