sp {attack*propose*turn
   (state <s> ^name attack
              ^io.input-link.blocked.{ << left right >> <dir> } no)
-->
   (<s> ^operator <o> +)
   (<o> ^name turn
        ^direction <dir>
        ^actions.rotate.direction <dir>)
}

sp {attack*propose*turn-around
   (state <s> ^name attack
              ^io.input-link.blocked <blocked>)
   (<blocked> ^forward yes
              ^left yes
              ^right yes)
-->
   (<s> ^operator <o> +)
   (<o> ^name turn
        ^direction left
        ^actions.rotate.direction left)
}



