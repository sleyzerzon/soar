##Elaborate the state with the name and direction 
##of the action we're evaluating
sp {evaluate-op*elaborate*action-to-be-evaluated
   (state <s> ^name evaluate-op
              ^superstate.operator <op>)
   (<op> ^name evaluate-op
         ^eval-item <item>
         ^eval-name <name>
         ^eval-direction <dir>)
-->
   (<s> ^eval-item <item>
        ^eval-name <name>
        ^eval-direction <dir>)
   (write (crlf) |EVALUATING OPERATOR: | <name> | | <dir>)
}

sp {elaborate*state*available-commands
   (state <s> ^name evaluate-op)
-->
   (<s> ^available-commands <ac>)
   (<ac> ^move.direction forward
         ^move.direction left
         ^move.direction right
         ^move.direction backward
         ^rotate.direction left
         ^rotate.direction right
         ^fire.weapon missile)
}
