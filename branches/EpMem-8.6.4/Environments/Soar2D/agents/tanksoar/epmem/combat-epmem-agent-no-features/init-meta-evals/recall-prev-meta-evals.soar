#IF there is no cue on the epmem link
#THEN propose creating one
sp {init-meta-evals*propose*recall-prev-meta-evals
   (state <s> ^name init-meta-evals
              ^epmem.query <query>)
   (<query> -^<< health energy missiles >>)
-->
   (<s> ^operator <op> + =)
   (<op> ^name recall-prev-meta-evals)
}

#IF the operator is selected
#THEN create a broad epmem query
sp {apply*recall-prev-meta-evals
   (state <s> ^operator <op>
              ^epmem.query <query>)
   (<op> ^name recall-prev-meta-evals)
-->
   (<query> ^health high)
}

