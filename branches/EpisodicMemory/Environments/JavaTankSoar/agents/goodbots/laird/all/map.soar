sp {map*mark-obstacle
   (state <s> ^map <m>
              ^io.input-link <io>
              ^square <cs>
              ^dirp.<dir> <dirr>)
   (<dirr> ^<pos> <pss>
           ^sx <sx>
           ^sy <sy>)
   (<pss> ^x <dx>
          ^y <dy>)
   (<io> ^radar.{ <type> << health energy obstacle >> } <ob>
         ^direction <dir>)
   (<ob> ^distance <d>
	 ^position <pos>)
   (<cs> ^x <x>
	   ^y <y>
        -^recorded <dir>)
-->
   (<m> ^<type> <obs>)
   (<obs> ^x (+ (+ <x> (* <sx> <d>)) <dx>)
          ^y (+ (+ <y> (* <sy> <d>)) <dy>))}

