echo "\nLoading all/map.soar"

##### compute current square 

sp {map*curent-square
   (state <s> ^io.input-link <il>
              ^map.square <cs>)
   (<il> ^x <x>
	   ^y <y>)
   (<cs> ^x <x>
	   ^y <y>)
-->
   (<s> ^square <cs>)}

## Mark visited
sp {map*visited*square
   :o-support
   (state <s> ^square <cs>)
  -(<cs> ^visited *yes*)
-->
   (<cs> ^visited *yes*)}


#Map radar-distance

sp {map*mark-radar-distance
   :o-support
   (state <s> ^map <m>
              ^io.input-link <io>
              ^square.radar-distances <rd>)
   (<io> ^radar.obstacle <ob>
         ^direction <dir>)
   (<ob> ^distance <d>
	   ^position center)
-->
   (<rd> ^<dir> (- <d> 1))}


######################mark using radar

sp {map*mark-open
   (state <s> ^map <m>
              ^io.input-link <io>
              ^square <cs>
              ^dirp.<dir> <dirr>)
   (<dirr> ^<pos> <pss>
           ^sx <sx>
           ^sy <sy>)
   (<pss> ^x <dx>
          ^y <dy>)
   (<io> ^radar.<< tank energy health missiles flag open >> <ob>
         ^direction <dir>)
   (<ob> ^distance <d>
	   ^position <pos>)
   (<cs> ^x <x>
	   ^y <y>
        -^recorded <dir>)
-->
;##  (write (crlf) | OPEN: | (+ (+ <x> (* <sx> <d>)) <dx>) |, |
;##                          (+ (+ <y> (* <sy> <d>)) <dy>))
   (<m> ^open <obs>)
   (<obs> ^x (+ (+ <x> (* <sx> <d>)) <dx>)
          ^y (+ (+ <y> (* <sy> <d>)) <dy>))}

sp {map*mark-open*set
   :o-support
   (state <s> ^map <m>)
   (<m> ^open <obs>
        ^square <sq>)
   (<sq> ^x <x> ^y <y>)
   (<obs> ^x <x> ^y <y>)
-->
   (<sq> ^open *yes*)}

sp {map*mark-open*set*there
   :o-support
   (state <s> ^square <sq>)
   (<sq> -^open *yes*)
-->
   (<sq> ^open *yes*)}

sp {map*record*square-direction
   :o-support
   (state <s> ^io.input-link <il>
              ^square <cs>)
   (<il> ^direction <dir>
         ^radar-status on)
-->
   (<cs> ^recorded <dir>)}

