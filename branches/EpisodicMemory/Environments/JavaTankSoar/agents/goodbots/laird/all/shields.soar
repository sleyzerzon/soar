echo "\nLoading all/shields.soar "

sp {shields-on*radiated
   (state <s> ^name tanksoar
              ^radiated yes
              ^io <io>)
   (<io> ^input-link.shield-status off
         ^output-link <ol>)    
   -->
   (<ol> ^shields.switch on)}

sp {shields-on*sound
   (state <s> ^name tanksoar
              ^sound
              ^io <io>)
   (<io> ^input-link.shield-status off
         ^input-link.smell.distance < 4
         ^output-link <ol>)    
   -->
   (<ol> ^shields.switch on)}

sp {shields-on*attack
   (state <s> ^name attack
             ^io <io>)
   (<io> ^input-link.shield-status off
         ^output-link <ol>)    
   -->
   (<ol> ^shields.switch on)}


sp {shields-on*under-attack
   (state <s> ^name tanksoar
              ^under-attack
              ^io <io>)
   (<io> ^input-link.shield-status off
         ^output-link <ol>)    
   -->
   (<ol> ^shields.switch on)}

sp {shields-off
   (state <s> ^name tanksoar
             -^name attack
             -^under-attack
             -^radiated
             -^sound
             -^saved-slide-direction
              ^io <io>)
   (<io> ^input-link.shield-status on
         ^output-link <ol>)
   --> 
   (<ol> ^shields.switch off)}
