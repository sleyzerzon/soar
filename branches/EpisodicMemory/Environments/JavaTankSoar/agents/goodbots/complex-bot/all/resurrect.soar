#echo "\nLoading all/resurrect.soar "

sp {all*propose*resurrect
   (state <s> ^name tanksoar
              ^saved-slide-direction
              ^io.input-link.resurrect yes)
-->
   (<s> ^operator <o> !)
   (<o> ^name resurrect)}

sp {all*apply*resurrect
   (state <s> ^operator.name resurrect
              ^saved-slide-direction <x>)
   -->
   (<s> ^saved-slide-direction <x> -)}  
