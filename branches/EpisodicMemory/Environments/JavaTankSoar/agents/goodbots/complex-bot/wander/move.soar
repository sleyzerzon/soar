#echo "\nLoading wander/move.soar "
################################
### Propose Move-forward operator if front is not blocked
################################

sp {wander*propose*move
   (state <s> ^name wander
             -^top-state.charger-ready *yes*
              ^io.input-link.blocked.forward no)
-->
   (<s> ^operator <o> + =)
   (<o> ^name move
        ^actions.move.direction forward)}

sp {wander*elaborate*move*radar-off
   (state <s> ^name wander
              ^operator <o>
              ^io.input-link <il>)
   (<il> ^radar-status on
        -^radar.tank)
   (<o> ^name move
        ^actions <a>)
-->
   (<a> ^radar.switch off)}


