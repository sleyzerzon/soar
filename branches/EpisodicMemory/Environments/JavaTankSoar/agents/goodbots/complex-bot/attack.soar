echo "\nLoading complex/attack.soar"

################################
### Propose attack operator
###   enemy-sensed on radar 
################################
sp {propose*attack
   (state <s> ^name tanksoar
              ^tank-detected *yes*
             -^missile-number none)
   -->
   (<s> ^operator <o> + =)
   (<o> ^name attack)}

sp {propose*attack*slide-direction
   (state <s> ^name tanksoar
              ^saved-slide-direction
             -^really-need-energy *yes*
             -^missile-number none)
   -->
   (<s> ^operator <o> + =)
   (<o> ^name attack)}
