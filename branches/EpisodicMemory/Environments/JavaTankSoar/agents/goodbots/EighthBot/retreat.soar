echo "\nLoading simple/retreat.soar"
   
# Propose RETREAT operator if in danger and tank cannot see 
# the enemy
sp {propose*retreat*in-danger
   (state <s> ^name tanksoar
              ^status <st>)
   (<st> ^in-danger yes
         -^enemy-sighted)
-->
   (<s> ^operator <o> + =)
   (<o> ^name retreat)
}


# Propose RETREAT operator if in danger and tank needs health
sp {propose*retreat*need-health
   (state <s> ^name tanksoar
              ^status <st>)
   (<st> ^in-danger yes
         ^need-health yes)
-->
   (<s> ^operator <o> + = )
   (<o> ^name retreat)
}


