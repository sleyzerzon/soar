#IF I have not made an episodic query yet
#THEN query being in the same place facing the direction
#     I intend to turn to.
sp {turn*propose*retrieve-epmem
   (state <s> ^name turn
              ^destination-abs-dir <abs-dir>
              ^io.input-link <il>
              ^epmem.query <q>)
   (<il> ^x <x>
         ^y <y>)
   (<q> -^io)
-->
   (<s> ^operator <op> + =)
   (<op> ^name retrieve-epmem)
}

sp {apply*retrieve-epmem
   (state <s> ^operator <op>
              ^epmem.query <q>
              ^destination-abs-dir <abs-dir>
              ^io.input-link <il>)
   (<op> ^name retrieve-epmem)
   (<il> ^x <x>
         ^y <y>)
-->
   (<q> ^io.input-link <q-il>)
   (<q-il> ^x <x>
           ^y <y>
           ^direction <abs-dir>
           ^radar-setting 13)
}

