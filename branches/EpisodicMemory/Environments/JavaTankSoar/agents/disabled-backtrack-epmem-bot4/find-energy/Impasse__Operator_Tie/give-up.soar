#IF I am in the recall-energy-path state
#THEN propose giving up (with least preference)
sp {recall-energy-path*propose*give-up
   (state <s> ^name recall-energy-path)
-->
   (<s> ^operator <op> + <)
   (<op> ^name give-up)
}

#Don't give up if I can record a path
sp {recall-energy-path*compare*give-up
   (state <s> ^name recall-energy-path
              ^operator <op1> +
                        <op2> +)
   (<op1> ^name record-energy-path)
   (<op2> ^name give-up)
-->
   (<s> ^operator <op1> > <op2>)
}


#IF the operator is selected
#THEN post a give up notice on the superstate
#NOTE:  :o-support is a hack.  Remove to crash activation.cpp.
sp {apply*give-up
   (state <s> ^operator <op>
              ^superstate <ss>)
   (<op> ^name give-up)
-->
   (<ss> ^epmem-gave-up true)
}

