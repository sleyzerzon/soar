sp {evaluate-move*propose*turn-to-eval-dir*left-right
   (state <s> ^name evaluate-move
              ^eval-dir <abs-dir>
              ^top-state.coord.<abs-dir> { <rel-dir> << left right >> })
-->
   (<s> ^operator <op> + =)
   (<op> ^name turn-to-eval-dir
         ^actions.rotate.direction <rel-dir>)
}

sp {evaluate-move*propose*turn-to-eval-dir*backward
   (state <s> ^name evaluate-move
              ^eval-dir <abs-dir>
              ^top-state.coord.<abs-dir> backward)
-->
   (<s> ^operator <op> + =)
   (<op> ^name turn-to-eval-dir
         ^actions.rotate.direction left)
}

sp {evaluate-move*compare*turn-to-eval-dir
   (state <s> ^name evaluate-move
              ^operator <op1> +
                        <op2> +)
   (<op1> ^name turn-to-eval-dir)
   (<op2> ^name << turn-on-radar epmem-recall epmem-recall-next >>)
-->
   (<s> ^operator <op1> > <op2>)
}
