echo "\nLoading mapping-elaborations/radar-map.soar"

## help compute absolute position
sp {elaborate*directions*radar-map
   (state <s> ^name tanksoar)
-->
   (<s> ^radar-map <dirp>)
   (<dirp> ^north <northp> ^south <southp> 
           ^west <westp> ^east <eastp>)
   (<northp> ^center <cr> ^right <nr> ^left <nl> ^sx 0 ^sy -1)
   (<southp> ^center <cr> ^right <sr> ^left <sl> ^sx 0 ^sy 1)
   (<westp>  ^center <cr> ^right <wr> ^left <wl> ^sx -1 ^sy 0)
   (<eastp>  ^center <cr> ^right <er> ^left <el> ^sx 1 ^sy 0)
   (<cr>  ^x   0 ^y  0)
   (<nr>  ^x   1 ^y  0)
   (<nl>  ^x  -1 ^y  0)
   (<sr>  ^x  -1 ^y  0)
   (<sl>  ^x   1 ^y  0)
   (<wr>  ^x   0 ^y  -1)
   (<wl>  ^x   0 ^y   1)
   (<er>  ^x   0 ^y   1)
   (<el>  ^x   0 ^y  -1)
#   (write (crlf) |Generating radar-map|)
}