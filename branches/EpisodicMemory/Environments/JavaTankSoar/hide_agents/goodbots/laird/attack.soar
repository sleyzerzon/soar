echo "\nLoading destroyer/attack.soar"

################################
### Propose attack operator
###   enemy-sensed on radar 
################################
sp {propose*attack
   (state <s> ^name tanksoar
              ^tank-detected
             -^missile-number none)
   -->
   (<s> ^name attack)}

sp {propose*attack*slide
   (state <s> ^name tanksoar
              ^save-slide-direction
             -^missile-number none)
   -->
   (<s> ^name attack)}

pushd "attack"
source "source.soar"
popd


