#This operator is proposed in a substate and
#applied as a subgoal.  So no propose/apply code 
#is in this file.

#Check for the state that there are unevaluated moves
sp {find-energy*elaborate*substate
   (state <s> ^name find-energy
              ^operator <o> +)
   (<o> ^name move
       -^evaluation)
-->
   (<s> ^unevaluated-moves true)
}


#As long as some moves are unevaluated
#it's better to gather info than move
sp {find-energy*compare*gather-info*better
   (state <s> ^name find-energy
              ^operator <op1> +
                        <op2> +
              ^unevaluated-moves true)
   (<op1> ^name gather-info)
   (<op2> ^name move)
-->
   (<s> ^operator <op1> > <op2>)
}

#If all moves have been evaluated then
#then the move operators are preferred
#over gather info
sp {find-energy*compare*gather-info*worse
   (state <s> ^name find-energy
              ^operator <op1> +
                        <op2> +
             -^unevaluated-moves true)
   (<op1> ^name gather-info)
   (<op2> ^name move)
-->
   (<s> ^operator <op1> < <op2>)
}

