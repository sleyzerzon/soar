#################  Subtask proposals ###################
  
sp {propose*get
  (state <s> ^task taxi ^info-link <i>)
  (<i> ^num-occupants < 2 ^passenger <p>)
  (<p> ^destination <d> ^location { <> taxi <> <d> } )
 -->
  (<s> ^operator <o> + =)
  (<o> ^name get
       ^passenger <p>)}


sp {propose*put
   (state <s> ^task taxi ^info-link <i>)
   (<i> ^passenger <p>)
   (<p> ^location taxi)
   -->
   (<s> ^operator <o> + =)
   (<o> ^name put
        ^passenger <p>)}
        
