sp {apply*enable-owner-grouping
   (state <s> ^operator <o>
              ^io.output-link <ol>)
    (<o> ^name enable-owner-grouping)
-->
   (<ol> ^command <c>)
   (<c> ^name enable-owner-grouping)
}

sp {apply*look-at-feature
    (state <s> ^operator <o>
               ^io.output-link <ol>)
    (<o> ^name look-at-feature
         ^feature <feature>
         ^sector <sector>)
-->
   (<ol> ^command <lf>)
   (<lf> ^feature <feature>
         ^sector <sector>
         ^name look-feature)
}
sp {apply*move-to-feature
    (state <s> ^operator <o>
               ^io.output-link <ol>)
    (<o> ^name move-to-feature
         ^feature <feature>
         ^sector <sector>)
-->
   (<ol> ^command <lf>)
   (<lf> ^feature <feature>
         ^sector <sector>
         ^name move-feature)
}

sp {apply*change-view-width
    (state <s> ^operator <o>
               ^io.output-link <ol>)
    (<o> ^name change-view-width
         ^width <w>)
-->
   (<ol> ^command <vw>)
   (<vw> ^value <w>
         ^name view-width)
}


sp {apply*set-grouping-individuals
    (state <s> ^operator <o>
               ^io.output-link <ol>
               ^top-state <ts>)
    (<o> ^name set-grouping-individuals)
-->
   (<ts> ^grouping-level individuals)
   (<ts> ^grouping-level small-groups -)
   (<ts> ^grouping-level large-groups -)
   (<ol> ^command <g>)
   (<g> ^value 0
        ^name grouping-radius)
}

sp {apply*set-grouping-small-groups
    (state <s> ^operator <o>
               ^io.output-link <ol>
               ^top-state <ts>)
    (<o> ^name set-grouping-small-groups)
-->
   (<ts> ^grouping-level individuals -)
   (<ts> ^grouping-level small-groups)
   (<ts> ^grouping-level large-groups -)
   (<ol> ^command <g>)
   (<g> ^value 32
        ^name grouping-radius)
}

sp {apply*set-grouping-large-groups
    (state <s> ^operator <o>
               ^io.output-link <ol>
               ^top-state <ts>)
    (<o> ^name set-grouping-large-groups)
-->
   (<ts> ^grouping-level individuals -)
   (<ts> ^grouping-level small-groups -)
   (<ts> ^grouping-level large-groups)
   (<ol> ^command <g>)
   (<g> ^value 64
        ^name grouping-radius)
}
