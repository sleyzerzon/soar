# there is an idle single worker, use it

sp {designate-explorer*propose*choose-explorer
   (state <s> ^name designate-explorer

              ^me.groups.group <g>)
   (<g> ^id <gid>
        ^type worker
        ^num-members 1  # should only explore with one guy
        ^command none)
-->
   (<s> ^operator <o> + =)
   (<o> ^name choose-explorer
        ^explorer <gid>)}

sp {designate-explorer*apply*choose-explorer
   (state <s> ^name designate-explorer
              ^operator <o>
              ^superstate <ss>)
   (<o> ^name designate-explorer
        ^explorer <gid>)
-->
   (<ss> ^explorer <gid>)}