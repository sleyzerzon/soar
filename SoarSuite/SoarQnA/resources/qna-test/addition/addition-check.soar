sp {addition*propose*addition-check
   (state <s> ^name addition
              ^result <r>)
-->
   (<s> ^operator <op> + =)
   (<op> ^name addition-check)
}

sp {apply*addition-check*failure
   (state <s> ^operator <op>
              ^result <r>
              ^superstate.io.input-link.qna-resultset.result.result {<> <r>})
   (<op> ^name addition-check)
-->
   (write |addition test failed!|)
   (halt)
}

sp {apply*addition-check*success
   (state <s> ^operator <op>
              ^result <r>
              ^superstate <ss>)
   (<ss> ^io.input-link.qna-resultset.result.result <r>
         ^test <t>)
   (<t> ^source math
        ^query |+|)
   (<op> ^name addition-check)
-->
   (<t> ^done true)
   (write |addition: success|)
}
