#!/usr/bin/python
import sys

Import('env')
env = env.Clone()

env.Prepend(CPPPATH = [	'#ClientSML/src',
			'#ElementXML/src',
			'#ConnectionSML/src'])

libadd = [ 'ClientSML', 
	   'ConnectionSML',
	   'ElementXML', 
	   ]

libpath = [ '$PREFIX/lib' ]

env.Append(LIBS = libadd, LIBPATH = libpath)
TOHSML = env.Program('TOHSML', Glob('*.cpp'))
env.Install('$PREFIX/bin', TOHSML)
env.Install('$PREFIX/share/soar/Demos', 'towers-of-hanoi-SML.soar')

