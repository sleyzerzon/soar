sp {wander*propose*reset
   (state <s> ^name wander
              ^io.input-link <il>
              ^turn.timeout <timeout>)
   (<il> ^time >= <timeout>)
-->
   (<s> ^operator <op> +)
   (<op> ^name reset)
}

sp {apply*reset
   (state <s> ^operator <op>)
   (<op> ^name reset)
-->
   (<s> ^turn <t> -)
}
